<Window x:Class="m3u8Downloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:m3u8Downloader.View.Controls"
        xmlns:vm="clr-namespace:m3u8Downloader.ViewModel"
        Title="main" Height="500" Width="700"
        Background="Black">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <Grid>
        <StackPanel Margin="20" Orientation="Vertical">

            <!-- Input -->
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <local:LabeledInput Grid.Column="0"
                            Label="Nhập URL"
                            Text="{Binding Url, Mode=TwoWay}" />

                <StackPanel Grid.Column="1" Margin="20,0,0,0">
                    <TextBlock Text="Max Worker" Foreground="White" Margin="0,0,0,4"/>
                         <TextBox Text="{Binding MaxWorker, Mode=TwoWay}" Width="80"
                     BorderBrush="DodgerBlue" BorderThickness="1"
                     Background="Black" Foreground="White"/>
                </StackPanel>
            </Grid>

            <!-- Thư mục -->
            <local:LabeledInput Label="Thư mục video" Text="{Binding VideoPath, Mode=TwoWay}" Margin="0,0,0,10"/>

            <!-- Kết quả (multiline) -->
            <TextBlock Text="Kết quả" Foreground="White" Margin="0,0,0,4"/>
            <TextBox Text="{Binding Result, Mode=TwoWay}" 
             Height="100" 
             BorderBrush="DodgerBlue" BorderThickness="1"
             Background="Black" Foreground="White"
             TextWrapping="Wrap" AcceptsReturn="True"
             VerticalScrollBarVisibility="Auto"
             IsReadOnly="True" />

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                <Button Content="Tải" 
                Command="{Binding DownloadCommand}"
                Background="DeepSkyBlue" Foreground="Black"
                Padding="10,5" Width="100" Margin="0,0,10,0"/>
                <Button Content="Check size" 
                Command="{Binding CheckSizeCommand}"
                Background="Red" Foreground="White"
                Padding="10,5" Width="100"/>
            </StackPanel>

            <!-- Footer -->
            <TextBlock Text="Fanpage : Thích Lập Trình" Foreground="White" Margin="0,20,0,0"/>
            <TextBlock Text="Tiktok: @trtoantech" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
