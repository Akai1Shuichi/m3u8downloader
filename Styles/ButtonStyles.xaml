<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <!--  Style Primary (mặc định xanh)  -->
    <Style
        x:Key="PrimaryButton"
        BasedOn="{StaticResource {x:Type ui:Button}}"
        TargetType="ui:Button">
        <Setter Property="Background" Value="DeepSkyBlue" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="MouseOverBackground" Value="LightSkyBlue" />
        <Setter Property="PressedBackground" Value="DodgerBlue" />
        <Setter Property="Padding" Value="10,5" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="Width" Value="100" />
    </Style>


    <!--  Style Secondary (đỏ)  -->
    <Style
        x:Key="SecondaryButton"
        BasedOn="{StaticResource {x:Type ui:Button}}"
        TargetType="ui:Button">
        <Setter Property="Background" Value="Red" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="MouseOverBackground" Value="#FF6347" />
        <Setter Property="PressedBackground" Value="DarkRed" />
        <Setter Property="Padding" Value="10,5" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="Width" Value="100" />
    </Style>

</ResourceDictionary>
